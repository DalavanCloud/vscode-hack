{
  "name": "vscode-hack",
  "version": "0.7.0",
  "publisher": "pranayagarwal",
  "engines": {
    "vscode": "^1.15.0"
  },
  "license": "MIT",
  "displayName": "Hack",
  "description": "Hack language & HHVM debugger support for Visual Studio Code.",
  "icon": "images/logo.png",
  "categories": [
    "Debuggers",
    "Languages",
    "Linters",
    "Snippets",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "hack",
    "hacklang",
    "hhvm"
  ],
  "galleryBanner": {
    "color": "#5d5d5d",
    "theme": "dark"
  },
  "author": {
    "name": "Pranay Agarwal"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PranayAgarwal/vscode-hack.git"
  },
  "bugs": {
    "url": "https://github.com/PranayAgarwal/vscode-hack/issues"
  },
  "main": "./out/main",
  "contributes": {
    "breakpoints": [
      {
        "language": "hack"
      }
    ],
    "debuggers": [
      {
        "type": "hhvm",
        "label": "HHVM",
        "program": "./out/src/debugger/debugger.js",
        "runtime": "node",
        "configurationSnippets": [
          {
            "label": "HHVM: Attach to Server",
            "description": "Attach to a HHVM server sandbox",
            "body": {
              "name": "Attach to Server",
              "type": "hhvm",
              "request": "attach",
              "host": "${1:localhost}",
              "port": 8089,
              "user": "${2:username}",
              "sandbox": "default"
            }
          }
        ],
        "configurationAttributes": {
          "attach": {
            "required": [
              "host",
              "port",
              "user",
              "sandbox"
            ],
            "properties": {
              "host": {
                "type": "string",
                "description": "Host name/IP address of HHVM server.",
                "default": "localhost"
              },
              "port": {
                "type": "number",
                "description": "Debug port to attach to (default 8089).",
                "default": 8089
              },
              "user": {
                "type": "string",
                "description": "Name of connecting user.",
                "default": "${workspaceRoot}/${command:hack.getUserName}"
              },
              "sandbox": {
                "type": "string",
                "description": "User sandbox to attach to.",
                "default": "default"
              },
              "stopOnRequest": {
                "type": "boolean",
                "description": "Automatically break at the beginning of every web request to the connected sandbox.",
                "default": false
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "name": "Attach to Server",
            "type": "hhvm",
            "request": "attach",
            "host": "localhost",
            "port": 8089,
            "user": "${workspaceRoot}/${command:hack.getUserName}",
            "sandbox": "default",
            "stopOnRequest": false
          }
        ]
      }
    ],
    "languages": [
      {
        "id": "hack",
        "aliases": [
          "Hack",
          "hacklang"
        ],
        "configuration": "./hack.configuration.json",
        "extensions": [
          ".php",
          ".hh"
        ],
        "firstLine": "^<\\?hh\\b.*$"
      }
    ],
    "grammars": [
      {
        "language": "hack",
        "scopeName": "text.html.hack",
        "path": "./syntaxes/hack.json"
      }
    ],
    "snippets": [
      {
        "language": "hack",
        "path": "./snippets/hack.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Hack configuration",
      "properties": {
        "hack.clientPath": {
          "type": "string",
          "default": null,
          "description": "Absolute path to the hh_client executable. This can be left empty if hh_client is already in your environment $PATH. A `docker exec` command is supported as well."
        },
        "hack.workspaceRootPath": {
          "type": "string",
          "default": null,
          "description": "Absolute path to the workspace root directory. This will be the VS Code workspace root by default, but can be changed if the project is in a subdirectory or mounted in a Docker container."
        },
        "hack.enableCoverageCheck": {
          "type": "boolean",
          "default": false,
          "description": "Enable calculation of Hack type coverage percentage for every file and display in status bar."
        },
        "hack.useLanguageServer": {
          "type": "boolean",
          "default": true,
          "description": "Start hh_client in Language Server mode. Only works for HHVM version 3.23 and above."
        }
      }
    },
    "commands": [
      {
        "command": "hack.toggleCoverageHighlight",
        "title": "Hack: Toggle Coverage Highlight"
      }
    ]
  },
  "activationEvents": [
    "workspaceContains:.hhconfig"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test",
    "lint": "tslint --force -p ."
  },
  "dependencies": {
    "vscode-debugadapter": "^1.26.0",
    "vscode-debugprotocol": "^1.26.0",
    "vscode-languageclient": "^3.5.0"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.44",
    "@types/node": "^8.0.53",
    "cson": "^4.1.0",
    "tslint": "^5.8.0",
    "tslint-microsoft-contrib": "^5.0.1",
    "typescript": "^2.6.1",
    "vscode": "^1.1.7",
    "vscode-debugadapter-testsupport": "^1.26.0"
  }
}
