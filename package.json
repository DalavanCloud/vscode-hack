{
  "name": "vscode-hack",
  "version": "0.7.0",
  "publisher": "pranayagarwal",
  "engines": {
    "vscode": "^1.18.0"
  },
  "license": "MIT",
  "displayName": "Hack",
  "description": "Hack/HHVM support for Visual Studio Code.",
  "icon": "images/logo.png",
  "categories": [
    "Languages",
    "Debuggers",
    "Linters",
    "Snippets",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "hack",
    "hacklang",
    "hhvm"
  ],
  "galleryBanner": {
    "color": "#5d5d5d",
    "theme": "dark"
  },
  "author": {
    "name": "Pranay Agarwal"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PranayAgarwal/vscode-hack.git"
  },
  "bugs": {
    "url": "https://github.com/PranayAgarwal/vscode-hack/issues"
  },
  "main": "./out/main",
  "contributes": {
    "languages": [
      {
        "id": "hack",
        "aliases": [
          "Hack",
          "hacklang"
        ],
        "configuration": "./hack.configuration.json",
        "extensions": [
          ".php",
          ".hh"
        ],
        "firstLine": "^<\\?hh\\b.*$"
      }
    ],
    "grammars": [
      {
        "language": "hack",
        "scopeName": "text.html.hack",
        "path": "./syntaxes/hack.json"
      }
    ],
    "snippets": [
      {
        "language": "hack",
        "path": "./snippets/hack.json"
      }
    ],
    "breakpoints": [
      {
        "language": "hack"
      }
    ],
    "debuggers": [
      {
        "type": "hhvm",
        "label": "HHVM",
        "program": "./out/debuggerNew",
        "runtime": "node",
        "languages": [
          "hack"
        ],
        "configurationAttributes": {
          "attach": {
            "required": [
              "host",
              "port"
            ],
            "properties": {
              "host": {
                "type": "string",
                "description": "Host name/IP address of HHVM server.",
                "default": "localhost"
              },
              "port": {
                "type": "number",
                "description": "Debug port to attach to (default 8999).",
                "default": 8999
              },
              "stopOnRequest": {
                "type": "boolean",
                "description": "Automatically break at the beginning of every web request to the connected sandbox.",
                "default": false
              }
            }
          }
        },
        "configurationSnippets": [
          {
            "label": "HHVM: Attach to Server",
            "description": "Attach to a HHVM server",
            "body": {
              "name": "Attach to Server",
              "type": "hhvm",
              "request": "attach",
              "host": "${1:localhost}",
              "port": 8999
            }
          },
          {
            "label": "HHVM: Run Script",
            "description": "Run the current script",
            "body": {
              "name": "Run Script",
              "type": "hhvm",
              "request": "launch"
            }
          }
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Hack configuration",
      "properties": {
        "hack.clientPath": {
          "type": "string",
          "default": null,
          "description": "Absolute path to the hh_client executable. This can be left empty if hh_client is already in your environment $PATH. A `docker exec` command is supported as well."
        },
        "hack.workspaceRootPath": {
          "type": "string",
          "default": null,
          "description": "Absolute path to the workspace root directory. This will be the VS Code workspace root by default, but can be changed if the project is in a subdirectory or mounted in a Docker container."
        },
        "hack.enableCoverageCheck": {
          "type": "boolean",
          "default": false,
          "description": "Enable calculation of Hack type coverage percentage for every file and display in status bar."
        },
        "hack.useLanguageServer": {
          "type": "boolean",
          "default": true,
          "description": "Start hh_client in Language Server mode. Only works for HHVM version 3.23 and above."
        }
      }
    },
    "commands": [
      {
        "command": "hack.toggleCoverageHighlight",
        "title": "Hack: Toggle Coverage Highlight"
      }
    ]
  },
  "activationEvents": [
    "workspaceContains:.hhconfig"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test",
    "lint": "tslint --force -p ."
  },
  "dependencies": {
    "vscode-debugadapter": "^1.26.0",
    "vscode-debugprotocol": "^1.26.0",
    "vscode-languageclient": "^3.5.0"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.44",
    "@types/node": "^8.0.53",
    "cson": "^4.1.0",
    "tslint": "^5.8.0",
    "tslint-microsoft-contrib": "^5.0.1",
    "typescript": "^2.6.2",
    "vscode": "^1.1.10"
  }
}
