{
  "name": "vscode-hack",
  "displayName": "Hack",
  "version": "0.4.0",
  "publisher": "pranayagarwal",
  "engines": {
    "vscode": "^1.5.0"
  },
  "license": "MIT",
  "description": "Hack language & HHVM debugger support for Visual Studio Code.",
  "icon": "images/logo.svg",
  "categories": [
    "Debuggers",
    "Languages",
    "Linters",
    "Snippets",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "hack",
    "hacklang",
    "hhvm"
  ],
  "galleryBanner": {
    "color": "#5d5d5d",
    "theme": "dark"
  },
  "preview": false,
  "private": true,
  "author": {
    "name": "Pranay Agarwal"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PranayAgarwal/vscode-hack.git"
  },
  "bugs": {
    "url": "https://github.com/PranayAgarwal/vscode-hack/issues"
  },
  "main": "./out/src/main",
  "activationEvents": [
    "workspaceContains:.hhconfig",
    "onLanguage:hack"
  ],
  "contributes": {
    "breakpoints": [
      {
        "language": "hack"
      },
      {
        "language": "php"
      }
    ],
    "debuggers": [
      {
        "type": "hhvm",
        "label": "HHVM",
        "program": "./out/src/debugger/debugger.js",
        "runtime": "node",
        "configurationSnippets": [
          {
            "label": "HHVM: Attach to Server",
            "description": "Attach to a HHVM server sandbox",
            "body": {
              "name": "Attach to Server",
              "type": "hhvm",
              "request": "attach",
              "host": "${1:localhost}",
              "port": 8089,
              "user": "${2:username}",
              "sandbox": "default"
            }
          }
        ],
        "configurationAttributes": {
          "attach": {
            "required": [
              "host",
              "port",
              "user",
              "sandbox"
            ],
            "properties": {
              "host": {
                "type": "string",
                "description": "Host name/IP address of HHVM server.",
                "default": "localhost"
              },
              "port": {
                "type": "number",
                "description": "Debug port to attach to (default 8089).",
                "default": 8089
              },
              "user": {
                "type": "string",
                "description": "Name of connecting user.",
                "default": "${workspaceRoot}/${command:hack.getUserName}"
              },
              "sandbox": {
                "type": "string",
                "description": "User sandbox to attach to.",
                "default": "default"
              },
              "stopOnRequest": {
                "type": "boolean",
                "description": "Automatically break at the beginning of every web request to the connected sandbox.",
                "default": false
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "name": "Attach to Server",
            "type": "hhvm",
            "request": "attach",
            "host": "localhost",
            "port": 8089,
            "user": "${workspaceRoot}/${command:hack.getUserName}",
            "sandbox": "default",
            "stopOnRequest": false
          }
        ]
      }
    ],
    "languages": [
      {
        "id": "hack",
        "aliases": [
          "Hack",
          "hacklang"
        ],
        "configuration": "./hack.configuration.json",
        "extensions": [
          ".php",
          ".hh"
        ],
        "firstLine": "^<\\?hh\\b.*$"
      }
    ],
    "grammars": [
      {
        "language": "hack",
        "scopeName": "text.html.hack",
        "path": "./syntaxes/hack.json"
      }
    ],
    "snippets": [
      {
        "language": "hack",
        "path": "./snippets/hack.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Hack configuration",
      "properties": {
        "hack.clientPath": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Absolute path to the hh_client executable. This can be left empty if hh_client is already in your environment $PATH."
        },
        "hack.enableCoverageCheck": {
          "type": "boolean",
          "default": false,
          "description": "Enable calculation of Hack type coverage percentage for every file and display in status bar."
        }
      }
    },
    "commands": [
      {
        "command": "hack.toggleCoverageHighlight",
        "title": "Hack: Toggle Coverage Highlight"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "./node_modules/typescript/bin/tsc -p ./",
    "compile": "./node_modules/typescript/bin/tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test",
    "lint": "node ./node_modules/tslint/bin/tslint -r ./node_modules/tslint-microsoft-contrib ./src/*.ts ./test/*.ts"
  },
  "dependencies": {
    "vscode-debugadapter": "^1.18.0-pre.1",
    "vscode-debugprotocol": "^1.17.0"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.40",
    "@types/node": "^6.0.40",
    "cson": "^4.0.0",
    "mocha": "^3.2.0",
    "tslint": "^4.5.1",
    "tslint-microsoft-contrib": "^4.0.0",
    "typescript": "^2.2.1",
    "vscode": "^1.1.0",
    "vscode-debugadapter-testsupport": "^1.17.0"
  }
}